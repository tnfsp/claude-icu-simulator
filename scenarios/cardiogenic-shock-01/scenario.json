  "diagnosis": {
    "primary": "Cardiogenic shock",
    "differential": [
      "Septic shock",
      "Hypovolemic shock",
      "Obstructive shock (PE)"
    ],
    "key_differentiators": [
      "Elevated JVP (不像 septic shock)",
      "Cold extremities (septic shock 通常 warm)",
      "Low procalcitonin (0.3 ng/mL)",
      "Poor LV function on echo (EF ~20%)",
      "Dilated non-collapsing IVC (volume overload)",
      "Recent STEMI history (3 days post-PCI)"
    ]
  },

  "optimal_management": {
    "avoid": [
      {
        "action": "大量輸液",
        "reason": "會加重肺水腫，惡化呼吸狀況"
      },
      {
        "action": "Pure vasopressor without inotrope",
        "reason": "單純升壓無法改善 cardiac output"
      }
    ],
    "recommended": [
      {
        "action": "Norepinephrine",
        "detail": "0.05-0.1 mcg/kg/min 起始，維持 MAP > 65"
      },
      {
        "action": "Dobutamine",
        "detail": "2.5-5 mcg/kg/min，改善 cardiac output"
      },
      {
        "action": "Furosemide",
        "detail": "20-40 mg IV，若有明顯 congestion"
      },
      {
        "action": "考慮照會心臟科",
        "detail": "評估是否需 IABP 或其他 MCS (Mechanical Circulatory Support)"
      },
      {
        "action": "限水",
        "detail": "每日限水 1000-1500 mL"
      }
    ]
  },

  "learning_points": [
    "Cardiogenic shock 可能因低灌流而有 elevated lactate，容易誤認為 sepsis",
    "Physical exam 的 JVP 和四肢溫度是重要鑑別點：cardiogenic = cold & wet, septic = warm & dry",
    "Bedside echo 可快速區分 cardiogenic vs distributive shock",
    "對 cardiogenic shock 給大量輸液會惡化病情（加重 pulmonary edema）",
    "Post-MI cardiogenic shock 需要同時考慮 mechanical complications (VSD, papillary muscle rupture)",
    "Procalcitonin 正常或輕度升高 (<0.5) 較不支持 bacterial sepsis"
  ],

